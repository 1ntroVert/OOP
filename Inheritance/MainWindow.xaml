<Window x:Class="Inheritance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Inheritance"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <DataGrid Name="datagrid" AutoGenerateColumns="false" Margin="0,88,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Title}" Header="Название"/>
                <DataGridTextColumn Binding="{Binding Price}" Header="Цена"/>
                <DataGridTextColumn Binding="{Binding Barcode}" Header="Штрих-код"/>
                <DataGridTextColumn Binding="{Binding AdditionalInfo}" Header="Доп. информация"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Создать диск" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="92" Click="Button_Click"/>
        <Button Content="Удалить товар" HorizontalAlignment="Left" Margin="107,10,0,0" VerticalAlignment="Top" Width="92" Click="DeleteButton_Click"/>
    </Grid>
</Window>